pipeline {
    agent {
        node {
            label 'AOSP'
            customWorkspace '/aosp/crDroid'
        }
    }

    environment {
        // Set up ccache to speed up builds
        USE_CCACHE = '1'
        CCACHE_EXEC = '/usr/bin/ccache'
        // Adjust CCACHE_DIR to your Jenkins agent's ccache location
        CCACHE_DIR = '/var/lib/jenkins/.ccache'
    }

    options {
        skipDefaultCheckout()
        // Timeout after 12 hours to prevent stuck builds
        timeout(time: 12, unit: 'HOURS')
        // Keep timestamps in logs
        timestamps()
    }

    stages {
        stage('Init') {
            steps {
                script {
                    // Check if .repo exists, if not initialize it
                    if (!fileExists('.repo')) {
                        echo 'Initializing repo...'
                        sh 'repo init -u https://github.com/crdroidandroid/android.git -b 16.0 --git-lfs --no-clone-bundle'
                    } else {
                        echo '.repo already exists, skipping init'
                    }
                }
            }
        }

        stage('Fetch Manifests') {
            steps {
                script {
                    sh '''
                        mkdir -p .repo/local_manifests
                        wget -O .repo/local_manifests/roomservice.xml "https://raw.githubusercontent.com/retrozenith-development/development/refs/heads/main/local_manifests/roomservice.xml"
                        echo "Downloaded roomservice.xml"
                    '''
                }
            }
        }

        stage('Sync') {
            steps {
                script {
                    // Sync the repo
                    sh 'repo sync -c -j$(nproc) --force-sync --no-clone-bundle --no-tags'
                }
            }
        }

        stage('Build') {
            when {
                expression {
                    // Only build if device tree exists
                    return fileExists('device/samsung/r8q')
                }
            }
            steps {
                script {
                    sh '''
                        #!/bin/bash
                        # Initialize the build environment
                        source build/envsetup.sh
                        
                        # Set up ccache size (optional, can be done once manually)
                        ccache -M 50G

                        # Build for r8q using brunch (handles lunch + mka bacon)
                        brunch r8q
                    '''
                }
            }
        }

        stage('Device Tree Missing') {
            when {
                expression {
                    return !fileExists('device/samsung/r8q')
                }
            }
            steps {
                echo 'ERROR: device/samsung/r8q not found. Skipping build.'
                echo 'Please ensure roomservice.xml is configured correctly in .repo/local_manifests/'
            }
        }
    }

    post {
        success {
            // Archive the artifacts as requested
            archiveArtifacts artifacts: 'out/target/product/r8q/crDroid*.zip, out/target/product/r8q/recovery.img, out/target/product/r8q/boot.img, out/target/product/r8q/super_empty.img, out/target/product/r8q/vbmeta.img', fingerprint: true
        }
        failure {
            echo 'Build failed!'
        }
    }
}
